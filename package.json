{
  "name": "experimental-wallet",
  "version": "1.0.0",
  "description": "wallet",
  "main": "main_process.js",
  "scripts": {
    "bundle": "webpack --mode development",
    "serve": "electron .",
    "start": "npm-run-all --parallel bundle serve",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "packb": "build --dir",
    "distb": "build -lw"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cryptoforge/experimental-wallet.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cryptoforge/experimental-wallet/issues"
  },
  "homepage": "https://github.com/cryptoforge/experimental-wallet#readme",

  "devDependencies": {
    "app-builder-lib": "^20.38.4",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^1.0.1",
    "electron": "^3.0.10",
    "electron-builder": "^20.38.4",
    "electron-builder-squirrel-windows": "^20.38.3",
    "electron-reload": "^1.3.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^2.0.0",
    "npm-run-all": "^4.1.3",
    "react-hot-loader": "^4.6.3",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "build": {
    "productName": "Zero Ultimate Wallet",
    "appId": "zero.ultimate.wallet",
    "asar": true,
    "linux": {
      "target": [
        "snap",
        "AppImage"
      ],
      "category": "Finance"
    },
    "win": {
      "target": "nsis",
      "icon": "./app/src/assets/icon.ico"
    },
    "nsis": {
      "perMachine": true
    }
  }
}
